<!--1.input的基本使用-->
<input></input>

<!-- 2.value:input中的默认值 -->
<input value="hahaha"></input>

<!-- 3.type:决定键盘的类型（英文字母+其他符号/数字/身份证） -->
<input type="number"></input>
<input type="idcard"></input>
<input type="digit"></input>

<!-- 4.password: 暗文形式-->
<input password></input>

<!-- 5.placeholder: 占位文字-->
<input placeholder="请输入文字"></input>

<!-- 6.input绑定时间 -->
<input 
      bindinput="handleInput"
      bindfocus="handleFocus"
      bindblur="handleBlur"
      ></input>